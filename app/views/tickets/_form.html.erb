
<%= form_for @ticket, html: {class: "form-horizontal"} do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <div class="field">
    <%= f.label :title, class:"control-label col-sm-3" %>
    <div class="col-sm-6">
    <%= f.text_field :title, class:"form-control" %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :customer_email, class:"control-label col-sm-3" %>
    <div class="col-sm-6">
    <%= f.text_field :customer_email, class:"form-control"  %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :customer_name, class:"control-label col-sm-3" %>
    <div class="col-sm-6">
    <%= f.text_field :customer_name, class:"form-control"  %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :issue, "Issue Details", class:"control-label col-sm-3" %>
    <div class="col-sm-6">
    <%= f.text_area :issue, class:"form-control"  %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :assigned_to, class:"control-label col-sm-3" %>
    <div class="col-sm-6">
    <%= f.text_field :assigned_to, class:"form-control" %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= f.label :area, class:"control-label col-sm-3" %>
    <div class="col-sm-6 input-lg">
    <%= f.select :area, options_from_collection_for_select(Area.all, :area_name, :area_name), class:"form-control"  %>
    </div>
  </div>
  </div>

  <div class="actions text-center">
    <%= f.submit %>
  </div>

<% end %>
