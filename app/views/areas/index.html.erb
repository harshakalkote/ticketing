<p id="notice"><%= notice %></p>

<h1>Listing Areas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Area Name </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.area_name %></td>
        <td><%= link_to 'Edit', edit_area_path(area), class:'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path, class:'btn btn-default btn-xs' %>
